if filereadable(expand('~/.vimrc_local_functions'))
  source ~/.vimrc_local_functions
end

set cursorline

" refresh read-only file
cmap vv view

map <LocalLeader>= :buffers<CR>
map <LocalLeader>1 :buffer 1<CR>
map <LocalLeader>2 :buffer 2<CR>
map <LocalLeader>3 :buffer 3<CR>
map <LocalLeader>4 :buffer 4<CR>
map <LocalLeader>5 :buffer 5<CR>
map <LocalLeader>6 :buffer 6<CR>
map <LocalLeader>7 :buffer 7<CR>
map <LocalLeader>8 :buffer 8<CR>
map <LocalLeader>9 :buffer 9<CR>

" dictionaries
:inoremap <Tab> <C-R>=Tab_Or_Complete()<CR>
" :set dictionary+=$HOME/.load_bash/.vim/dicts/sql

" colors
:colorscheme Tomorrow-Night
" autocmd BufEnter *.py colorscheme Tomorrow
" autocmd BufEnter *.sql colorscheme jellybeans

map <LocalLeader>h :HardTimeToggle<CR>
set pastetoggle=<LocalLeader>[
let g:hardtime_default_on = 1
let g:hardtime_showmsg = 1
let g:hardtime_allow_different_key = 1
let g:hardtime_maxcount = 4

:set mouse=a


alias gl="git log"
alias gd="git diff"
alias gds="git diff --staged"

alias l="ls -lFh"
alias la='ls -a'
alias ll='ls -alh'

alias grep='grep --color'

alias g="git"
alias gt="git status"
alias gb="git branch -vv"
alias gd="git diff"
alias gdno="git diff --name-only"
alias gh="git hist -20"
alias gca="git commit --all"
alias gcw="git commit -t <(cat $(git config commit.template) <(echo) <(echo) <(gitcoauthoredby))"
alias gitopen='vim $(git status -s | awk '"'"'{print $2}'"'"')'
alias gr="git reset"
alias gs="git status"
alias gl="git log"
alias glo="git log --oneline"


if [[ $(which_computer) == "home" ]]; then
  escape_spaces() {
    echo $1 | sed 's/ /\\\ /g'
  }

  # TODO: switch to wslpath for windows stuff to convert C:\ to /mnt/c ...
  WINDOWS_YKMAN="/mnt/b/Software/yubico/YubiKey Manager/ykman.exe"
  alias ykman="$(escape_spaces ${WINDOWS_YKMAN})"

  WINDOWS_GPG="/mnt/b/Software/GnuPG"
  alias gpg="${WINDOWS_GPG}/bin/gpg.exe"
  alias gpgconf="${WINDOWS_GPG}/bin/gpgconf.exe"
  alias gpg-agent="${WINDOWS_GPG}/bin/gpg-agent.exe"
fi

alias gcloud_ssh="gcloud alpha cloud-shell ssh --ssh-flag=-A"
